<aura:component>
    <aura:attribute name="myVal" type="String" />
    <lightning:inputRichText variant="bottom-toolbar" disabledCategories="FORMAT_TEXT,FORMAT_FONT,FORMAT_BODY,ALIGN_TEXT,REMOVE_FORMATTING" value="{!v.myVal}" placeholder="Type something interesting"/>
    <h1 class="slds-m-top_large slds-text-heading_medium">Output</h1>
    <div aura:id="output" class="slds-box editor slds-text-longform">
        <lightning:formattedRichText value="{!v.myVal}" />
    </div>
</aura:component>